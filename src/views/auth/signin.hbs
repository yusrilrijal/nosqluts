<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-5" style="background-color: #E5DDC5; color: #your_text_color;">
      <div class="card-header text-center pt-5">
        <h1 class="h4">
          Login Akun
        </h1>
      </div>
      <img
        class="rounded-circle mx-auto d-block logo m-4"
        src="/img/logo.png"
        alt="Logo"
        style="width: 200px; /* Atur lebar yang diinginkan */"
      />
      <div class="card-body" style="background-color: #E5DDC5;">
        <form action="/auth/signin" method="POST">
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control bg text-white"
              name="email"
              placeholder="Email"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="password">Password:</label>
            <input
              type="password"
              class="form-control bg text-white"
              name="password"
              placeholder="Password"
            />
          </div>
          <button class="btn btn-success btn-block">
            Sign-in
          </button>
        </form>
</div>


      <p class="text-center">Belum Punya Akun? <a href="/auth/signup" class="text-info">Register</a></p>
    </div>
  </div>
</div>
